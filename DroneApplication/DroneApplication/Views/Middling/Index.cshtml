@model IEnumerable<DataAccessLayer.Models.FileModel>

@{
    ViewData["Title"] = "Създаване";
}

<h1>Добавяне на полети</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Създай</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <!--<th>
                @Html.//DisplayNameFor(model => model.File)
            </th> -->
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <!-- <td>
                @Html.//DisplayFor(modelItem => item.File)
                </td> -->
            <td>
                    <a asp-action="Edit" class="btn btn-dark"  asp-route-id="@item.Id">Променяне</a> |
                    <a asp-action="Details" class="btn btn-dark" asp-route-id="@item.Id">Детайли</a> |
                    <a asp-action="Delete" class="btn btn-dark" asp-route-id="@item.Id">Изтриване</a>
            </td>
        </tr>
}
    </tbody>
</table>
